<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/foods_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:animateLayoutChanges="true"
    app:cardCornerRadius="8dp"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true"
    android:layout_gravity="center_horizontal"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical"
        android:layoutMode="opticalBounds">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="6dp">

            <ImageView
                android:id="@+id/pic1"
                android:layout_width="90dp"
                android:layout_height="70dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:foregroundGravity="center"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"/>
            <LinearLayout
                android:id="@+id/LinearLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@+id/pic1"
                android:orientation="vertical"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/pic1">
                <TextView
                    android:id="@+id/foodname1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:text="Waffles, Bacon And Eggs"
                    android:textColor="@android:color/black"
                    android:fontFamily="@font/pop"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/fooddesc1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Honey \u0026 Butter Belgian Waffles, Smoked Bacon, Sunny-Side Up Eggs, Served with Whipped Cream"
                    android:fontFamily="@font/pop"
                    android:lineHeight="16sp"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/foodprice1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="225"
                    android:textAlignment="viewEnd"
                    android:fontFamily="@font/pop"
                    android:textStyle="bold"
                    android:textSize="25sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
